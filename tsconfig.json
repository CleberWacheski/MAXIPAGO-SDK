{
   "compilerOptions": {
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "es2022",
      "strict": true,
      "allowJs": false,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "sourceMap": false,
      "declaration": true,
      "isolatedModules": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["ES2022"],
      "module": "NodeNext",
      "baseUrl": ".",
      "paths": {
         "@module/*": ["./src/modules/*"]
      }
   },
   "exclude": ["vitest.config.ts"]
}
